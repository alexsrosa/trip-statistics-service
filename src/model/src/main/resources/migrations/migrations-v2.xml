<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="Alex Rosa" id="1685918656860-1">
        <addColumn tableName="taxis">
            <column name="taxis_type" type="varchar(6)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="Alex Rosa" id="1685918921391-1">
        <dropColumn tableName="taxis" columnName="id"/>

        <addColumn tableName="taxis">
            <column autoIncrement="false" name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="taxis_pkey"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="Alex Rosa" id="setup_database-v2">
        <tagDatabase tag="v2"/>
    </changeSet>

</databaseChangeLog>
